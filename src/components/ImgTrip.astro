---
interface Props {
  trip: {
    id: string;
    name: string;
    img: string;
    withTitle: boolean;
    facebookAlbum: string;
    pill?: string;
  };
}

const { trip } = Astro.props;

const src = `/img/viajes/${trip.img}`;
const alt = `Foto del grupo de buceadores en ${trip.name}`;
const withTitle = trip.withTitle;
const name = trip.name;
const pill = trip.pill;
---

<article>
  <img src={src} alt={alt} loading="lazy" />
  {
    !withTitle && (
      <div class="title">
        <h2>{name}</h2>
        <h3>
          <span>ATLANTIDA</span> MÃ¡s que una Escuela de <span>BUCEO</span>
        </h3>
      </div>
    )
  }
  {pill && <div class="pill">{pill}</div>}
</article>

<style lang="scss">
  @import "@styles/variables";

  article {
    position: relative;

    img {
      position: relative;
      display: block;
      width: 100%;
      height: auto;
      aspect-ratio: 4/3;
      object-fit: contain;
      background: #000;
    }

    .title {
      position: absolute;
      bottom: 0;
      width: 100%;
      backdrop-filter: blur(1px);

      h2 {
        height: 32px;
        line-height: 34px;
        padding-left: 4px;
        background: linear-gradient(to top, rgba($color-primary, 1) 30%, rgba($color-primary, 0) 100%);
        font-family: $font-family;
        font-weight: 400;
        font-size: 16px;
        text-align: left;
        color: $font-color-min;
        border-bottom: 2px solid $color-body-primary;
      }

      h3 {
        height: 32px;
        padding-left: 4px;
        padding-top: 6px;
        background: linear-gradient(to bottom, rgba($color-secondary, 1) 25%, rgba(white, 0.3) 100%);
        font-family: $font-family;
        font-weight: 400;
        font-size: 14px;
        text-align: left;
        color: $font-color-min;

        span {
          font-family: "Ostrich Sans", sans-serif;
          font-size: 18px;
        }
      }
    }

    .pill {
      position: absolute;
      top: 6px;
      right: 6px;
      padding: 2px 8px;
      background: rgba($color-primary, 0.75);
      color: $font-color-min;
      border-radius: 9999px;
      font-size: $font-size * 0.9;
    }
  }
</style>
